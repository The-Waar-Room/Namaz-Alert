<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorSecondary">@color/whiteColor</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/statusBarColor</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>

    </style>

    <style name="SettingAppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
        <item name="colorPrimary">@color/bgBoxColor</item>
        <item name="colorPrimaryDark">@color/bgBoxColor</item>
        <item name="colorAccent">@color/appTheme</item>
    </style>


    <style name="Theme.MySplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/bgBoxColor</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="windowSplashScreenAnimationDuration">800</item>
        <item name="postSplashScreenTheme">@style/AppTheme.NoActionBar</item>

        <!-- Status bar and Nav bar configs -->
        <item name="android:statusBarColor">@color/bgBoxColor</item>
        <item name="android:navigationBarColor">@color/mainBgColor</item>
    </style>



</resources>