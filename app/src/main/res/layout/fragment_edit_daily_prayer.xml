<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>


    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fajr_color">


        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/materialToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/fajr_color"
            app:layout_collapseMode="pin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="@drawable/ic_back"
            app:navigationIconTint="@color/whiteColor">

        </com.google.android.material.appbar.MaterialToolbar>


        <TextView
            android:id="@+id/dailyPrayer_TextView"
            style="@style/TextAppearance.AppTheme.Headline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:textColor="@color/whiteColor"
            android:textSize="26sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/materialToolbar"
            tools:text="FAJR Namaz \n4:15am" />


        <TextView
            android:id="@+id/leftHandSide_TextView"
            style="@style/TextAppearance.AppTheme.Headline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:textColor="@color/whiteColor"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/dailyPrayer_TextView"
            app:layout_constraintTop_toBottomOf="@+id/dailyPrayer_TextView"
            tools:text="Vibrate time \n At 4:10am" />

        <TextView
            android:id="@+id/rightHandSide_TextView"
            style="@style/TextAppearance.AppTheme.Headline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:textColor="@color/whiteColor"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/leftHandSide_TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/leftHandSide_TextView"
            tools:text="Vibrate time \n For 4:30am" />


        <View
            android:id="@+id/view2"
            android:layout_width="20dp"
            android:layout_height="5dp"
            android:background="@color/whiteColor"
            app:layout_constraintBottom_toBottomOf="@+id/leftHandSide_TextView"
            app:layout_constraintEnd_toStartOf="@+id/rightHandSide_TextView"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/leftHandSide_TextView"
            app:layout_constraintTop_toTopOf="@+id/rightHandSide_TextView" />

        <ImageView
            android:id="@+id/item_BgImage"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY"
            android:src="@drawable/fajr_image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/fajr_bg_gradient_drawable"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/item_BgImage" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>